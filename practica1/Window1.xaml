<Window x:Class="practica1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practica1"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="500">
    <StackPanel>
        <TextBlock Text="Авторизация" HorizontalAlignment="Center" FontSize="30" Margin="0, 20, 0, 0"/>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock Text="Эл. почта:" FontSize="24" Margin="50, 0, 0, 0" Height="30"/>
                <TextBlock Text="Пароль:" FontSize="24" Margin="50, 0, 0, 0" Height="30"/>
            </StackPanel>
            <StackPanel>
                <TextBox FontSize="24" Width="200" Height="30" Margin="10,0,0,0"/>
                <TextBox FontSize="24" Width="200" Height="30" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
        <Button Content="Зарегестрироваться" FontSize="30" Margin="20,10,20,0"/>
    </StackPanel>
</Window>
